#!/usr/bin/env bash

. "$(dirname -- "${BASH_SOURCE[0]}")/include.sh"
# . include.sh

set -e

echo -n 'ðŸ’¾'

bc_disk="/"
bc_disk="$(df "$bc_disk" | grep -Eo '[0-9\.]+%' | head -n 1)"
bc_disk="${bc_disk%'%'}"
bc_disk="${bc_disk%.*}"

if [[ "$_os" == "Darwin" ]]; then
    bc_disk=$((100-bc_disk))
fi

# declare -p bc_disk

blockchart -r "$bc_disk" 100 ${1:-10}

echo
